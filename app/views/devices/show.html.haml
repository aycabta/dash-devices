%h1= @device.name

%dl
  %dt= 'device model'
  %dd= @device.model
  %dt= 'scraped'
  %dd= @device.scraped
  %dt= 'user'
  %dd= "#{@device.user.name} (#{@device.user.nickname})"

%h2= 'Slots'
%ul
  - @device.slots.each do |slot|
    %li
      %dl
        %dt= 'name'
        %dd= slot.name
        %dt= 'slot_id'
        %dd= slot.drs_slot_id
        %dt= 'items'
        %dd
          %ul
            - slot.items.each do |item|
              %li
                %iframe{ style: "width:120px;height:240px;", marginwidth: "0", marginheight: "0", scrolling: "no", frameborder: "0", src: "//ws-na.amazon-adsystem.com/widgets/q?ServiceVersion=20070822&OneJS=1&Operation=GetAdHtml&MarketPlace=US&source=ac&ref=tf_til&ad_type=product_link&tracking_id=aycabta-20&marketplace=amazon&region=US&placement=0804189765&asins=#{item.asin}&linkId=f4f2b7871f029fee69ce80f659e01cae&show_border=false&link_opens_in_new_window=false&price_color=333333&title_color=0066c0&bg_color=ffffff" }
